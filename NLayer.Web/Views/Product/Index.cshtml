@model List<ProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category</th>
        <th>CreatedDate</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.CategoryId-@item.Category.Name</td>
            <td>@item.CrearedDate</td>
            <td><a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
            <td><a class="btn btn-danger" asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id">Delete</a></td>

        </tr>
    }
</table>
<a class="btn btn-outline-dark" asp-controller="Product" asp-action="Save" >Add New Product</a>

